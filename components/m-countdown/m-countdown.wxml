<!--components/m-countdown/m-countdown.wxml-->
<view class="dataTime">
	<view class="data_day">{{date_day}}å¤©</view>
	<view>{{date_time}} </view>
	<block wx:if="{{isShow && isPause}}">
		<image mode="widthFix" class="btn pauseBtn" src="/asserts/images/btns/pause.png" bindtap="tapPlay"></image>
	</block>
	<block wx:elif="{{isShow && !isPause}}">
		<image mode="widthFix" class="btn pauseBtn" src="/asserts/images/btns/playing.png" bindtap="tapPause"></image>
	</block>
</view>