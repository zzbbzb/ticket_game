.weui-tabs-swiper {
  width: 100%;
  /* height: 200px; */
}

.tab-content {
  /* height: 100px; */
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.weui-tabs-bar__title {
  margin: 0px 10px;
}

.tab-bar-title__selected {
  font-size: 20px;
  /* font-weight: bold; */
}

.ticket_content {
  display: flex;
  flex-direction: column;
  width: 100%;
  position: relative;
}

.ticket_slot {
  min-width:25vw;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.btn {
  height: 70rpx;
  font-size: 40rpx;
  line-height: 65rpx;
  font-size: 35rpx;
}

.t {
  font-size: 30rpx;
}
