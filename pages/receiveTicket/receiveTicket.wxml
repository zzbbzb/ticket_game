<!--pages/receiveTicket/receiveTicket.wxml-->
<block wx:if="{{!isOwn}}">
	<view class="ticketContainer">
		<text class="title">抱歉!此券不是送给您的</text>
	</view>
</block>
<block wx:else>
	<view class="ticketContainer" style="height:{{ticketContainerHeight}}px">
		<block wx:for="{{ticketList}}" wx:key="index">
			<m-ticket ticket="{{ticketList[index]}}" isShowExpireTime="{{true}}" isExpireTimeCanTap="{{false}}">
			</m-ticket>
		</block>
	</view>

	<block wx:if="{{!hasUserInfo}}">
			<button type="primary" class="getTicket" style="height:{{statusBarHeight}}px"  bindtap="showLogin">
					登录领取</button>
	</block>
	<block wx:else>
		<button type="primary" class="getTicket" style="height:{{statusBarHeight}}px" 
					disabled="{{receiveState === 1? true : false}}" bindtap="receiveTickets">
					{{receiveState === 1? '已经领取': '一键领取'}}</button>
	</block>
</block>

<mp-dialog title="" show="{{showDialog}}" bindbuttontap="tapDialogButton" bindgetUserInfo="getUserInfo" buttons="{{[{text: '登录'}]}}">
	<view slot="bd">
	<text>领取需要获取你的用户信息</text>
	<text>请登录</text>
	</view>
</mp-dialog>
